{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "CGRust.Runtime.csproj",
	    "CGRust.Wrapper.csproj"
          ]
        }
      ],
      "dest": "api",
      "allowCompilationErrors": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "./",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "CGRust for Unity",
      "_appTitle": "CGRust for Unity",
      "_enableSearch": true,
      "pdf": false
    }
  }
}